{# item.html.twig

	This file provides the template for displaying a details for a specific player
	in the database.  It sets up the table style, and then builds the html code
	for the table of information about the toy.
#}

{% include 'header.twig' %}
<style>
table, tr, th, td { border: 0px !important; }
td, th {padding: .4em;}
.id { text-align: center; }
.name { text-align: center; }
.price { text-align: right; }
</style>
{% if results %}
<h1>Details for {{results[0].playerID}}</h1>

<table>
<tr>
<td class="attr">Name</td>
<td class="value">${{results[0].name}}</td>
</tr><tr>
<td class="attr">Age</td>
<td class="value">{{results[0].age}}</td>
</tr><tr>
<td class="attr">Team</td>
<td class="value">{{results[0].team}}</td>
</tr><tr>
<td class="attr">Goals</td>
<td class="value">{{results[0].goals}}</td>
</tr><tr>
<td class="attr">Shots</td>
<td class="value">{{results[0].shots}}</td>

</tr>
<table>


{% endif %}

